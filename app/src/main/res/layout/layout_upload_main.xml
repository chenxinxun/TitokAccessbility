<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upload.UploadMainActivity">
    <TextView
        android:id="@+id/tip"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="该功能适配机型Android系统10以上的tiktok"/>

    <TextView
        android:id="@+id/delay_title"
        app:layout_constraintTop_toTopOf="@+id/delay"
        app:layout_constraintBottom_toBottomOf="@+id/delay"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_left"
        android:text="延迟操作时间 "/>
    <EditText
        android:id="@+id/delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/min_width"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/common_left"
        android:inputType="number"
        android:padding="@dimen/common_padding"
        android:background="@drawable/bg_input"
        app:layout_constraintStart_toEndOf="@+id/delay_title"
        app:layout_constraintTop_toBottomOf="@+id/tip"
        android:layout_marginTop="@dimen/common_left"
        />
    <TextView
        app:layout_constraintTop_toTopOf="@+id/delay"
        app:layout_constraintStart_toEndOf="@+id/delay"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"/>
    <LinearLayout
        android:id="@+id/ip_layout"
        app:layout_constraintTop_toBottomOf="@+id/delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="服务器IP地址"
            android:textSize="@dimen/common_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/split_line" />
        <EditText
            android:id="@+id/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/common_left"
            android:inputType="number"
            android:digits="0123456789."

            android:padding="@dimen/common_padding"
            app:layout_constraintStart_toEndOf="@+id/delay_title"
            app:layout_constraintTop_toTopOf="@+id/delay_title"
            app:layout_constraintBottom_toBottomOf="@+id/delay_title"/>

    </LinearLayout>

    <TextView
        android:id="@+id/id_h"
        app:layout_constraintTop_toBottomOf="@+id/ip_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/common_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_left"
        android:text="设备ID"/>
    <TextView
        android:id="@+id/device_id"
        app:layout_constraintTop_toBottomOf="@+id/ip_layout"
        app:layout_constraintStart_toEndOf="@+id/id_h"
        android:layout_marginTop="@dimen/common_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_left"
        android:textSize="@dimen/common_left"
        android:textColor="#3CB371"
        android:textStyle="bold"
        android:text="-"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/common_left"
        app:layout_constraintTop_toBottomOf="@+id/id_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存配置并开始"/>
</androidx.constraintlayout.widget.ConstraintLayout>